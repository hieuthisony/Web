@model IEnumerable<Lab8.Models.Order>
@{
    ViewData["Title"] = "Đơn hàng";
}

<h1 class="h3 mb-2 text-gray-800">Quản lý Đơn hàng</h1>
<div class="card shadow mb-4">
    <div class="card-header py-3 d-flex justify-content-between">
        <h6 class="m-0 font-weight-bold text-primary">Danh sách Đơn hàng</h6>
        <a asp-action="Create" class="btn btn-primary btn-sm"><i class="fas fa-plus"></i> Tạo đơn hàng</a>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Mã ĐH</th>
                        <th>Ngày tạo</th>
                        <th>Khách hàng</th>
                        <th>Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.OrderDate.ToString("dd/MM/yyyy HH:mm")</td>
                            <td>@(item.Customer != null ? item.Customer.Name : "Khách lẻ")</td>
                            <td>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm" onclick="return confirm('Hủy đơn hàng này?');">Hủy đơn</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>